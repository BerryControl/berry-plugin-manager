{
  "name": "berry-plugin-manager",
  "version": "0.1.0",
  "description": "Load plugins at runtime to enable custom enhancements to your application.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "prepack": "npmignore --auto",
    "prepare": "npm run build",
    "pretest": "cd test/test-plugin && npm i && npm run build",
    "test": "jest",
    "clean": "rm -f .npmignore && rm -rf `find . -name 'node_modules'` && rm -rf `find . -name 'dist'`"
  },
  "publishConfig": {
    "ignore": [
      "!dist/",
      "src/",
      "test/"
    ]
  },
  "keywords": [
    "plugin",
    "plugin-manager",
    "package",
    "npm"
  ],
  "author": "Thomas Bonk",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "npmignore": "^0.3.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "guid-typescript": "^1.0.9"
  }
}
